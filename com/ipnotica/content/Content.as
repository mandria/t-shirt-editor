/** * TShirt conatiner.  * Here are placed all shirts and all items used to personalize it  *  **/package com.ipnotica.content {			import com.ipnotica.content.blackboard.Blackboard;
	import com.ipnotica.utils.Config;
	import com.ipnotica.utils.CustomEvents;
	import com.ipnotica.utils.Utils;
	
	import flash.display.MovieClip;	public class Content extends MovieClip {				public var blackboard:Blackboard;				public function Content() {			super();			init();		}				private function init():void {			Utils.setConfig(this);			initListeners();		}				/** 		 * Handle the click of a thumb (Product, Movieclip or Text) in the menu 		 **/		private function initListeners():void {			Config.doc.addEventListener(CustomEvents.THUMB_CLICKED, changeContent);		}		 		// TODO: the function we call here should be placed in 		// another place. Into the current product do not looks 		// always correct.		private function changeContent(e:CustomEvents):void {			Config.currentProduct.items.onThumbClicked(e);		}						/**		 * Reload the content		 **/		public function update():void {			clear();			blackboard.loadProduct(null)		}				public function clear():void {			this.removeChild(blackboard);			blackboard = null;			blackboard = new Blackboard();			this.addChild(blackboard);		}			}}