package com.doitflash.utils.scroll
{
	/**
	 * indicates the RegSimpleScroll class static consts
	 * @author Ali Tavakoli
	 * @see RegSimpleScroll
	 */
	public class RegSimpleConst
	{
		/**
		 * draws circle as scrollbar buttons
		 */
		public static const CIRCLE:String = "myCircle";
		/**
		 * draws triangle as scrollbar buttons
		 */
		public static const TRIANGLE:String = "myTriangle";
		
		/**
		 * indicates the minimum value(20) that you can set as the mask width
		 */
		public static const MASK_MIN_WIDTH:Number = 20;
		/**
		 * indicates the minimum value(20) that you can set as the mask height
		 */
		public static const MASK_MIN_HEIGHT:Number = 20;
		
		/**
		 * indicates the maximum value(50) that you can set as the space between scrollbar and content
		 */
		public static const SCROLL_MAX_SPACE:Number = 50;
		
		/**
		 * indicates the maximum value(100) that you can set as the scrollbar background width
		 */
		public static const BG_MAX_WIDTH:Number = 100;
		
		/**
		 * indicates the maximum value(200) that you can set as the scrollbar slider width
		 */
		public static const SLIDER_MAX_WIDTH:Number = 200;
		/**
		 * indicates the minimum value(10) that you can set as the scrollbar slider height
		 */
		public static const SLIDER_MIN_HEIGHT:Number = 10;
		
		/**
		 * indicates the maximum value(100) that you can set as the scrollbar buttons size
		 */
		public static const BTN_MAX_SIZE:Number = 100;
		/**
		 * indicates the minimum value(7) that you can set as the scrollbar buttons size
		 */
		public static const BTN_MIN_SIZE:Number = 7;
		/**
		 * indicates the maximum value(20) that you can set as the space between scrollbar buttons and scrollbar background
		 */
		public static const BTN_MAX_SPACE:Number = 20;
		/**
		 * indicates the scrollbar capability to be drawn completely or just draw the buttons if buttons are enabled
		 */
		public static const BTN_ONLY_NUM:Number = 30;
	}
}